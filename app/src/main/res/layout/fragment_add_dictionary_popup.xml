<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_ticket_clicked_base"
    android:background="@color/default_background_color"
    tools:context="home.svp.langs.card.TicketClickedPopup">
    <GridLayout
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="1"
        android:rowCount="2"
        >
        <RelativeLayout
            android:id="@+id/frame_ticket_clicked_top"
            android:layout_row="0"
            android:minHeight="100dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/shadow">
            <RelativeLayout
                android:id="@+id/ticket_clicked_layout_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/edit_dialog_title"
                    android:gravity="start"
                    style="@style/title"
                    android:layout_margin="10dp" />
            </RelativeLayout>
            <LinearLayout
                android:background="@color/default_background_color"
                android:id="@+id/add_dic_layout_separator"
                android:layout_below="@+id/ticket_clicked_layout_header"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:orientation="horizontal" />
            <EditText
                android:layout_below="@+id/add_dic_layout_separator"
                style="@style/input_text_control"
                android:id="@+id/popup_add_dictionary_text"
                android:textColor="@android:color/black" />
        </RelativeLayout>
        <FrameLayout
            android:layout_gravity="top"
            android:layout_row="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                    <ImageButton
                        android:id="@+id/actionbar_bottom_btn_ok"
                        style="@style/ButtonStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:contentDescription="@android:string/ok"
                        android:src="@drawable/ic_accept"
                        android:layout_marginRight="2.5dp"
                        android:background="@drawable/shadow"/>
                    <ImageButton
                        android:layout_marginLeft="2.5dp"
                        android:id="@+id/actionbar_bottom_btn_no"
                        style="@style/ButtonStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:contentDescription="@android:string/no"
                        android:src="@drawable/ic_action_cancel"
                        android:background="@drawable/shadow"/>
            </LinearLayout>
        </FrameLayout>
    </GridLayout>
</FrameLayout>
